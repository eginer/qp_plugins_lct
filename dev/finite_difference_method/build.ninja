QP_ROOT = /home_lct/dtraore/qp2

builddir = $QP_ROOT/config

rule update_build_ninja_root
   command = /home_lct/dtraore/qp2/scripts/compilation/qp_create_ninja update

rule make_local_binaries
   command = ninja -f $QP_ROOT/config/build.ninja module_finite_difference_method
   pool = console
   description = Compile only finite_difference_method

rule make_all_binaries
  command = ninja -f $QP_ROOT/config/build.ninja
  pool = console
  description = Compiling all modules

rule make_clean
  command = module_handler.py clean finite_difference_method
  description = Cleaning module finite_difference_method

rule make_tidy
  command = module_handler.py tidy finite_difference_method
  description = Cleaning module finite_difference_method

rule executables
  command = make -C $QP_ROOT/ocaml executables .gitignore qp_edit.native qp_run.native
  description = Updating OCaml executables

build dummy_target: update_build_ninja_root

build all: make_all_binaries dummy_target

build local: make_local_binaries dummy_target

build executables: executables local dummy_target

default executables

build clean: make_clean dummy_target

build tidy: make_tidy dummy_target
